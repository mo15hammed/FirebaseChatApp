<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/his_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/txt_his_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:background="@drawable/his_message_background"
        android:text="Hello, Brandon. How are you doin' ?!"
        android:textColor="@android:color/black"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/his_profile_image"
        android:textSize="16dp"
        />

    <ImageView
        android:id="@+id/img_his_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/his_profile_image"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:maxHeight="350dp"
        android:src="@drawable/profile_pic"
        android:visibility="gone"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/his_profile_image" />

    <TextView
        android:id="@+id/txt_his_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 PM"
        android:layout_alignLeft="@+id/txt_his_message"
        android:layout_below="@+id/img_his_message"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:visibility="gone"/>

</RelativeLayout>