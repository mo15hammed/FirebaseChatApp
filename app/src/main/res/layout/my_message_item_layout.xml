<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:id="@+id/message_layout">

    <TextView
        android:id="@+id/txt_my_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:background="@drawable/my_message_background"
        android:text="I am fine. How are you ?!"
        android:textColor="@android:color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:visibility="visible"
        />
    
    <ImageView
        android:id="@+id/img_my_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_pic"
        android:maxHeight="350dp"
        android:maxWidth="300dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:adjustViewBounds="true"/>
    

    <TextView
        android:id="@+id/txt_my_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 PM"
        android:layout_alignRight="@+id/txt_my_message"
        android:layout_below="@+id/img_my_message"
        android:textSize="12sp"
        android:layout_marginRight="8dp"
        android:visibility="gone"/>


</RelativeLayout>